<h1><%= @cat.name %></h1>

<table>
    <tr>
        <th>Age</th>
        <th>Color</th>
        <th>Sex</th>
    </tr>
    <tr>
        <td><%= @cat.age %></td>
        <td><%= @cat.color %></td>
        <td><%= @cat.sex %></td>
    </tr>
</table>

<p>Description: <%= @cat.description %></p>

<h2>Rental Requests</h2>
<table>
    <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
        <th></th>
        <th></th>
    </tr>
    <% @cat.cat_rental_requests.order('start_date').each do |request| %>
        <tr>
            <td><%=request.start_date%></td>
            <td><%=request.end_date%></td>
            <td><%=request.status%></td>
            <td><%=request.pending? ? button_to('Approve Request', approve_cat_rental_request_url(request)) : '' %></td>
            <td><%=request.pending? ? button_to('Deny Request', deny_cat_rental_request_url(request)) : ''%></td>
        </tr>
    <% end %>
</table>

<%= button_to 'Edit', edit_cat_url(@cat), method: :get %>
