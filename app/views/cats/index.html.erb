<h1 class="cats__index--heading">Cats<h1>

<div class="cats__index--container">

    <div class="cats__index--list">
        <% @cats.each do |cat| %>
            <h3> <%= link_to cat.name, cat_url(cat.id) %> </h3>
        <% end %>
    </div>

    <%= button_to 'Add a Cat', new_cat_url, method: :get %>

    <%= button_to 'New Rental Request', new_cat_rental_request_url, method: :get %>
</div>


